head
  meta(charset="utf-8")
  meta(content="IE=edge", http-equiv="X-UA-Compatible")
  meta(content="width=device-width, initial-scale=1", name="viewport")
  meta(name="theme-color", content="#ffffff")
  title Best Day Ever

template(name="layout")
  header
    .navbar-fixed
      nav(role='navigation')
        .container
          .nav-wrapper
            a#logo-container.brand-logo(href='/') Best Day Ever     
            ul#nav-mobile.side-nav    
              if signed_in
                li
                  a(href='/today') Today
                li
                  a(href='/all-the-days') Previously 
                li
                  a(href='/account') {{username}}                      
                li
                  a.signout(href='/signout') Sign Out 
              else        
                li
                  a.signin(href='#') Sign In 
        a.btn-flat.button-collapse(href='#', data-activates='nav-mobile')
          i.mdi-navigation-menu

  main
    .container
      +yield
